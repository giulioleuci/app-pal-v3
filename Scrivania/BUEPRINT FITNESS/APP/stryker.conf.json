{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts?(x)",
    "!src/main.tsx",
    "!src/vite-env.d.ts",
    "!src/**/*.test.ts?(x)",
    "!src/**/*.spec.ts?(x)",
    "!src/**/*.stories.tsx",
    "!src/shared/types/**/*",
    "!src/shared/locales/**/*",
    "!src/app/db/fixtures/**/*.ts",
    "!src/test-utils.tsx",
    "!src/test-setup.ts",
    "!src/test-database.ts",
    "!src/test-factories.ts",
    "!src/app/i18n.ts",
    "!src/app/env.ts",
    "!src/app/container.ts"
  ]
}